<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/icon_page" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textColor="@color/default_black"
            android:textSize="24sp" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2">

        <ImageView
            android:id="@+id/iv_nervos"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_splash_nervos_logo" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_below="@id/iv_nervos"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/tv_secured_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:text="Secured by"
                android:textColor="@color/font_inside"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/iv_peck_shield"
                android:layout_width="64dp"
                android:layout_height="14dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/tv_secured_by"
                android:src="@drawable/ic_splash_peckshield_logo" />
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>